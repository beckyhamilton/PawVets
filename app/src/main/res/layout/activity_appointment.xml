<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Appointment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bookappt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Book Appointment"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

    </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/waitTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center|center_vertical"
                android:text="Current Wait Time"
                android:textColor="#000000"
                android:textSize="20dp" />


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0." />

        <TextView
            android:id="@+id/selectservice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_horizontal"
            android:text="Service"
            android:textColor="#000000"
            android:textSize="20dp" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/selectservice_spinner"
            android:layout_width="341dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/light_grey"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/selecttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_horizontal"
            android:text="Select Time Slot"
            android:textColor="#000000"
            android:textSize="20dp" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/selecttime_spinner"
            android:layout_width="341dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/light_grey"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/selectpet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_horizontal"
            android:text="select pet"
            android:textColor="#000000"
            android:textSize="20dp" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/selecttime_spinner2"
            android:layout_width="341dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/light_grey"
            android:spinnerMode="dropdown" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0." />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0." />

        <Button
            android:id="@+id/bookBtn"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/SignUpBtn"
            android:text=" Book Appointment"

            android:textColor="@color/common_google_signin_btn_text_dark_pressed"></Button>

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>










